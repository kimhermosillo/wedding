generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Guest {
  id                  Int      @id
  name                String
  email               String?
  phone               Int?
  rsvp                Boolean
  dietaryRestrictions String?
  message             String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

enum RsvpStatus {
  YES
  NO
  MAYBE
  PENDING
}
